{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make GPIO Example",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/make"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Clean GPIO Example",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/make"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}